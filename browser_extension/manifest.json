{
    "manifest_version": 3,
    "name": "Video Extractor Helper",
    "version": "1.0.0",
    "description": "Captura automaticamente URLs de v√≠deo para processamento",
    "permissions": [
        "webRequest",
        "storage",
        "scripting",
        "activeTab",
        "clipboardWrite"
    ],
    "host_permissions": [
        "*://*.cloudflarestream.com/*",
        "*://*.hub.la/*",
        "*://*.segueadii.com.br/*",
        "*://*.pandavideo.com.br/*",
        "*://*.vimeo.com/*",
        "*://*.vimeocdn.com/*",
        "*://*.youtube.com/*",
        "*://*.googlevideo.com/*",
        "*://*.jwplatform.com/*",
        "*://*.jwpcdn.com/*",
        "*://*.kiwify.com/*",
        "*://*.kiwify.com.br/*",
        "http://localhost:5000/*",
        "http://127.0.0.1:5000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js",
                "overlay.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "popup.html",
                "icon16.png",
                "icon48.png",
                "icon128.png",
                "popup.js",
                "processing_ui.js",
                "library.js",
                "inject.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}